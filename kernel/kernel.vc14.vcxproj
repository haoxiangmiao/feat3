<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- global project properties -->
  <PropertyGroup Label="Globals">
    <ProjectGuid>{98608C16-F806-46BE-BDB4-77BA4023DC38}</ProjectGuid>
    <FeatAppName>kernel</FeatAppName>
    <FeatRootPath>$(ProjectDir)..</FeatRootPath>
  </PropertyGroup>
  <!-- import common config -->
  <Import Project="$(FeatRootPath)\visual_studio\vc14-common-config.xml" />
  <!-- Kernel Source Exclusion List -->
  <ItemGroup>
    <!-- exclude all test sources -->
    <FeatKernelExcludeSource Include="**\*-test*.cpp" />
    <!-- exclude geometry test_aux sources -->
    <FeatKernelExcludeSource Include="geometry\test_aux\*.cpp" />
    <!-- exclude MKL sources unless the MKL backend is enabled -->
    <FeatKernelExcludeSource Include="**\*_mkl.cpp" Condition="'$(BackendMKL)'!='true'" />
    <!-- exclude OS Windows utility source (this one is included explicitly below) -->
    <FeatKernelExcludeSource Include="util\os_windows.cpp" />
  </ItemGroup>
  <!-- Kernel Cuda Exclusion List -->
  <!-- ************************************************************************************************************* -->
  <!-- File Inclusion Lists -->
  <!-- ************************************************************************************************************* -->
  <!-- Header File List -->
  <ItemGroup>
    <ClInclude Include="**\*.hpp" />
  </ItemGroup>
  <!-- Source File List -->
  <ItemGroup>
    <ClCompile Include="**\*.cpp" Exclude="@(FeatKernelExcludeSource)" />
    <ClCompile Include="@(FeatKernelIncludeSource)" Condition="'@(FeatKernelIncludeSource)'!=''" />
    <!-- OS Windows utility source file -->
    <ClCompile Include="util\os_windows.cpp">
      <DisableLanguageExtensions>false</DisableLanguageExtensions>
      <WarningLevel>TurnOffAllWarnings</WarningLevel>
    </ClCompile>
  </ItemGroup>
  <!-- CUDA Source File List -->
  <ItemGroup Condition="'$(BackendCUDA)'=='true'">
    <CudaCompile Include="**\*.cu" Exclude="@(FeatKernelExcludeCuda)" />
    <CudaCompile Include="@(FeatKernelIncludeCuda)" Condition="'@(FeatKernelIncludeCuda)'!=''" />
  </ItemGroup>
  <PropertyGroup>
    <ShowAllFiles>true</ShowAllFiles>
  </PropertyGroup>
  <!-- Hack: delete intermediate files forgotten by CUDA -->
  <ItemDefinitionGroup Condition="'$(BackendCUDA)'=='true'">
    <PostBuildEvent>
      <Command>del /f /q $(ProjectDir)\tmpxft_*.cpp3.o</Command>
      <Message>Deleting CUDA junk files...</Message>
    </PostBuildEvent>
  </ItemDefinitionGroup>
  <!-- import lib target -->
  <Import Project="$(FeatRootPath)\visual_studio\vc14-target-lib.xml" />
</Project>