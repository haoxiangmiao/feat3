  <!-- global project properties -->
  <PropertyGroup Label="Globals">
    <ProjectGuid>{98608C16-F806-46BE-BDB4-77BA4023DC38}</ProjectGuid>
    <FeastAppName>kernel</FeastAppName>
    <FeastRootPath>$(ProjectDir)..</FeastRootPath>
  </PropertyGroup>
  <!-- import common config -->
  <Import Project="$(FeastRootPath)\visual_studio\vc10-common-config.xml" />
  <!-- Kernel Source Exclusion List -->
  <ItemGroup>
    <!-- exclude all test sources -->
    <FeastKernelExcludeSource Include="**\*-test*.cpp" />
    <!-- exclude geometry test_aux sources -->
    <FeastKernelExcludeSource Include="geometry\test_aux\*.cpp" />
    <!-- exclude MKL sources unless the MKL backend is enabled -->
    <FeastKernelExcludeSource Include="**\*_mkl.cpp" Condition="'$(BackendMKL)'!='true'" />
  </ItemGroup>
  <!-- Kernel Cuda Exclusion List -->
  <!-- ************************************************************************************************************* -->
  <!-- File Inclusion Lists -->
  <!-- ************************************************************************************************************* -->
  <!-- Header File List -->
  <ItemGroup>
    <ClInclude Include="**\*.hpp" />
  </ItemGroup>
  <!-- Source File List -->
  <ItemGroup>
    <ClCompile Include="**\*.cpp" Exclude="@(FeastKernelExcludeSource)" />
    <ClCompile Include="@(FeastKernelIncludeSource)" Condition="'@(FeastKernelIncludeSource)'!=''" />
  </ItemGroup>
  <!-- CUDA Source File List -->
  <ItemGroup Condition="'$(BackendCUDA)'=='true'">
    <CudaCompile Include="**\*.cu" Exclude="@(FeastKernelExcludeCuda)" />
    <CudaCompile Include="@(FeastKernelIncludeCuda)" Condition="'@(FeastKernelIncludeCuda)'!=''" />
  </ItemGroup>
