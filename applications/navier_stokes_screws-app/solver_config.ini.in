[linsolver_a]
type = fgmres
max_iter = 1000
tol_rel = 1e-8
precon = mgv_a
precon_variant = left
krylov_dim = 7
plot = all

[mgv_a]
type = mg
hierarchy = h1_a
lvl_min = 0
lvl_max = -1
cycle = f

[h1_a]
type = hierarchy
smoother = smoother_a
coarse = scale

[scale]
type = scale
omega = 0.7

[smoother_a]
type = fgmres
min_iter = 16
max_iter = 16
krylov_dim = 16
precon = jac

[linsolver_s]
type = pcg
max_iter = 1000
#tol_abs = 1e-4
tol_rel = 1e-8
precon = mgv_s
#min_stag_iter = 3
plot = all

[mgv_s]
type = mg
hierarchy = h1_s
lvl_min = 0
lvl_max = -1
cycle = v

[h1_s]
type = hierarchy
smoother = rich
coarse = Coarse-S

[Coarse-S]
type = pcg
plot = none
max_iter = 1000
tol_rel = 1e-8
