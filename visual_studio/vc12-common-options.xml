<Project DefaultTargets="Build" ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemDefinitionGroup>
    <BuildLog>
      <Path>$(IntDir)\$(FeastBuildName).log</Path>
    </BuildLog>
  </ItemDefinitionGroup>

  <!-- ************************************************************************************************************* -->
  <!-- Compiler / Linker Settings -->
  <!-- ************************************************************************************************************* -->
  <PropertyGroup>
    <IntDir>$(FeastObjPath)\$(FeastBuildName)\</IntDir>
    <TargetName>$(FeastBuildName)</TargetName>
    <LinkIncremental>$(DebugMode)</LinkIncremental>
    <GenerateManifest>false</GenerateManifest>
  </PropertyGroup>
  <PropertyGroup Label="Configuration">
    <CharacterSet>MultiByte</CharacterSet>
    <UseDebugLibraries>$(DebugMode)</UseDebugLibraries>
  </PropertyGroup>
  <PropertyGroup Condition="'$(DebugMode)'=='false'" Label="Configuration">
    <WholeProgramOptimization>true</WholeProgramOptimization>
  </PropertyGroup>

  <!-- Common Settings -->
  <ItemDefinitionGroup>
    <ClCompile>
      <WarningLevel>EnableAllWarnings</WarningLevel>
      <PrecompiledHeader>NotUsing</PrecompiledHeader>
      <PreprocessorDefinitions>VISUAL_STUDIO;FEAST_NO_CONFIG;FEAST_STDC_ASSERT;$(FeastDefList)</PreprocessorDefinitions>
      <AdditionalIncludeDirectories>$(FeastRootPath);$(FeastIncDirList)</AdditionalIncludeDirectories>
      <CompileAs>Default</CompileAs>
      <AdditionalOptions>/bigobj %(AdditionalOptions)</AdditionalOptions>
      <FloatingPointExceptions>true</FloatingPointExceptions>
      <DisableLanguageExtensions>true</DisableLanguageExtensions>
    </ClCompile>
    <Link>
      <GenerateDebugInformation>true</GenerateDebugInformation>
      <DataExecutionPrevention>false</DataExecutionPrevention>
    </Link>
  </ItemDefinitionGroup>
  <!-- Debug-Mode Settings -->
  <ItemDefinitionGroup Condition="'$(DebugMode)'=='true'">
    <ClCompile>
      <Optimization>Disabled</Optimization>
      <MultiProcessorCompilation>false</MultiProcessorCompilation>
      <InlineFunctionExpansion>Disabled</InlineFunctionExpansion>
      <OmitFramePointers>false</OmitFramePointers>
      <SmallerTypeCheck>true</SmallerTypeCheck>
      <FunctionLevelLinking>true</FunctionLevelLinking>
      <RuntimeTypeInfo>true</RuntimeTypeInfo>
      <MinimalRebuild>true</MinimalRebuild>
    </ClCompile>
  </ItemDefinitionGroup>
  <!-- Opt-Mode Settings -->
  <ItemDefinitionGroup Condition="'$(DebugMode)'=='false'">
    <ClCompile>
      <Optimization>Full</Optimization>
      <FunctionLevelLinking>false</FunctionLevelLinking>
      <IntrinsicFunctions>true</IntrinsicFunctions>
      <BufferSecurityCheck>false</BufferSecurityCheck>
      <InlineFunctionExpansion>AnySuitable</InlineFunctionExpansion>
      <FavorSizeOrSpeed>Speed</FavorSizeOrSpeed>
      <MultiProcessorCompilation>true</MultiProcessorCompilation>
      <OmitFramePointers>true</OmitFramePointers>
      <RuntimeTypeInfo>true</RuntimeTypeInfo>
    </ClCompile>
  </ItemDefinitionGroup>

  <!-- OpenMP Settings -->
  <ItemDefinitionGroup Condition="'(EnableOMP)'=='true'">
    <ClCompile>
      <OpenMPSupport>true</OpenMPSupport>
    </ClCompile>
  </ItemDefinitionGroup>

  <!-- CUDA Backend Settings -->
  <PropertyGroup Condition="'$(BackendCUDA)'=='true'">
    <CudaIntDir>$(FeastObjPath)\$(FeastBuildName)</CudaIntDir>
  </PropertyGroup>

  <ItemDefinitionGroup Condition="'$(BackendCUDA)'=='true'">
    <CudaCompile>
      <GPUDebugInfo>$(DebugMode)</GPUDebugInfo>
      <HostDebugInfo>$(DebugMode)</HostDebugInfo>
    </CudaCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(BackendCUDA)'=='true' And '$(FeastCudaArch)'!='' And '$(FeastCudaCode)'!=''">
    <CudaCompile>
      <CodeGeneration>$(FeastCudaArch),$(FeastCudaCode)</CodeGeneration>
    </CudaCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(BackendCUDA)'=='true' And '$(Platform)'=='Win32'">
    <CudaCompile>
      <TargetMachinePlatform>32</TargetMachinePlatform>
    </CudaCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(BackendCUDA)'=='true' And '$(Platform)'=='x64'">
    <CudaCompile>
      <TargetMachinePlatform>64</TargetMachinePlatform>
    </CudaCompile>
  </ItemDefinitionGroup>

  <!-- ************************************************************************************************************* -->
  <!-- Visual Studio Import Mumbo-Jumbo -->
  <!-- ************************************************************************************************************* -->
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />
  <ImportGroup Label="ExtensionSettings">
    <!--<Import Project="$(VCTargetsPath)\BuildCustomizations\CUDA 5.5.targets"
      Condition="'$(CUDA_PATH)'!='' And '$(BackendCUDA)'=='true'"/>-->
  </ImportGroup>
</Project>
